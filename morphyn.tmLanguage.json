{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Morphyn",
  "scopeName": "source.morphyn",
  "patterns": [
    {
      "name": "comment.line.number-sign.morphyn",
      "match": "#.*$"
    },
    {
      "name": "comment.block.morphyn",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "comment.line.double-slash.morphyn",
      "match": "//.*$"
    },
    {
      "name": "string.quoted.double.morphyn",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.morphyn",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "keyword.control.morphyn",
      "match": "\\b(entity|event|has|check|import|emit|when|unwhen|and|or|not)\\b"
    },
    {
      "name": "constant.language.morphyn",
      "match": "\\b(true|false|self|pool|null)\\b"
    },
    {
      "name": "keyword.operator.flow.morphyn",
      "match": "->"
    },
    {
      "name": "keyword.operator.comparison.morphyn",
      "match": "(==|!=|<=|>=|<|>)"
    },
    {
      "name": "keyword.operator.arithmetic.morphyn",
      "match": "(\\+|\\-|\\*|/|%)"
    },
    {
      "name": "entity.name.type.morphyn",
      "match": "(?<=entity\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
    },
    {
      "name": "entity.name.type.morphyn",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\.)"
    },
    {
      "name": "entity.name.type.morphyn",
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "entity.name.function.morphyn",
      "match": "(?<=\\.)[a-z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "entity.name.function.morphyn",
      "match": "(?<=event\\s+)[a-z_][a-zA-Z0-9_]*"
    },
    {
      "name": "support.function.builtin.morphyn",
      "match": "\\b(log|count|add|remove_at|at|each|push|pop|shift|swap|insert|remove|clear|abs|min|max|clamp|lerp|pow|input|unity)\\b"
    },
    {
      "name": "support.function.builtin.morphyn",
      "match": "\\b(log|count|add|remove_at|at|each|push|pop|shift|swap|insert|remove|clear|abs|min|max|clamp|lerp|pow|input|unity)\\b"
    },
    {
      "name": "variable.other.property.morphyn",
      "match": "(?<=has\\s+)[a-z_][a-zA-Z0-9_]*"
    },
    {
      "name": "constant.numeric.morphyn",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    }
  ]
}
